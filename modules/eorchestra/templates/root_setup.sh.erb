#!/bin/bash

found=$(grep '<%= @private_ipaddress %> <%= @host %>' /etc/hosts)
if [ $? -eq 1 ]
then
    echo "<%= @private_ipaddress %> <%= @host %>" >> /etc/hosts
fi
dbexists=$(su - postgres -c "psql -l | grep eorchestra | wc -l")
if [ $? -eq 1 ]
then
	su - postgres -c "createuser -R -S -D eorchestra"
	su - postgres -c "createdb -O eorchestra eorchestra"
fi